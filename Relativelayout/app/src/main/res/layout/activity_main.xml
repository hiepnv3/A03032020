<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/red"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:background="#f70721"
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/green"
        android:layout_below="@+id/red"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:background="#21e632"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/blue"
        android:layout_below="@+id/green"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:background="#3387f8"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/orange"
        android:layout_below="@+id/blue"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:background="#d1a731"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gray"
        android:layout_below="@+id/orange"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:background="#959396"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pink"
        android:layout_below="@+id/gray"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:background="#db21b7"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>