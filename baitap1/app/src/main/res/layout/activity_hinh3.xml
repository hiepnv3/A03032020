<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="1"
            android:background="#ed1b24"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:textSize="60sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="2"
            android:background="#fef102"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="60sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:text="3"
                android:background="#25b14e"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="60sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:text="4"
                android:background="#a349a3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </TextView>
        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:textSize="60sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="5"
            android:background="#c7bfe6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="6"
            android:background="#ff7f26"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="7"
            android:background="#3f47cc"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>

</LinearLayout>